@model thn.Models.forgotPassword

@{
    ViewBag.Title = "Forgot Password  | The Halo Network";
}

<div id="content">
    <div class="left-float">
        <h2>Forgot your password? We can help you</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <p>
            <input type="submit" value="Submit" class="greenbutton"/>
        </p>
    </fieldset>
}
    </div>
</div>
<div id="modal" style="display:none">
    <table cellspacing="100">
        
        <tr>
            <td><a href="@Url.Action("individual", "signup")"><img src="/Images/icons/user.png" /></a></td>
            <td><a href="@Url.Action("ngo", "signup")"><img src="/Images/icons/ngo.png" /></a></td>
        </tr>
        <tr>
            <td><center><font size="20px">Individual</font></center></td>
            <td><center><font size="20px">Organization</font></center></td>
        </tr>
    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
